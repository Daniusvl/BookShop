<Window x:Class="BookShop.CRM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookShop.CRM"
        mc:Ignorable="d"
        Title="a" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0">
            
        </Grid>

        <Grid Grid.Column="1">
            
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <Label Content="{Binding UserName, UpdateSourceTrigger=PropertyChanged, Mode=OneTime}"
                   HorizontalAlignment="Right" FontSize="20"></Label>
            <Button Grid.Row="1" Content="Log out" HorizontalAlignment="Right" Margin="5 0 5 25" FontSize="16" Padding="5" Command="{Binding LogoutCommand}"></Button>
        </Grid>
    </Grid>
</Window>
