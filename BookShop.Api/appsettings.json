{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },

  "ConnectionStrings": {
    "BooksDb": "Server=(localdb)\\mssqllocaldb;Database=BooksDb;Trusted_Connection=True;",
    "IdentityDb": "Server=(localdb)\\mssqllocaldb;Database=IdentityDb;Trusted_Connection=True;"
  },

  "JwtSettings": {
    "Issuer": "https://localhost:4004",
    "Audience": "https://localhost:4004",
    "Key": "VERY_SECRET_KEY_THAT_SHOULD_BE_IN_USER_SECRET"
  }
}
